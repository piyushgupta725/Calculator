<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn9"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn8"
        android:text="7" />

    <Button
        android:id="@+id/btndiv"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:text="/" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn9"
        android:layout_alignTop="@+id/btn5"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn8"
        android:layout_marginBottom="174dp"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn6"
        android:text="4" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btndiv"
        android:layout_alignTop="@+id/btn6"
        android:text="*" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="94dp"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn3"
        android:layout_marginStart="103dp"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn7"
        android:layout_alignTop="@+id/btn3"
        android:layout_marginStart="2dp"
        android:text="1" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btndiv"
        android:layout_alignTop="@+id/btn3"
        android:text="+" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn9"
        android:layout_marginBottom="21dp"
        android:text="clear" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn2"
        android:layout_alignTop="@+id/btnclear"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn7"
        android:layout_alignTop="@+id/btnclear"
        android:layout_marginEnd="1dp"
        android:text="=" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btndiv"
        android:layout_alignTop="@+id/btnclear"
        android:text="-" />

    <TextView
        android:id="@+id/tvcontrol"
        android:layout_width="293dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btndiv"
        android:layout_marginStart="-233dp"
        android:layout_marginTop="183dp" />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="290dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btndiv"
        android:layout_marginStart="-229dp"
        android:layout_marginTop="120dp" />
</RelativeLayout>